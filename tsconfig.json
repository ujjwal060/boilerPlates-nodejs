{
  "compilerOptions": {
    "target": "ES2022", 
    "module": "CommonJS", 
    "outDir": "./dist", 
    "rootDir": "./src", 
    "strict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true, 
    "moduleResolution": "Node", 
    "baseUrl": "./src", 
    "paths": {
      "@/*": ["*"] 
    }
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "**/*.spec.ts"] 
}
